<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/errorf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/friendmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:onClick="MenuBtn"
        android:src="@drawable/friends"
        android:tag="friends" />

    <ImageButton
        android:id="@+id/groupmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/friendmenu"
        android:layout_marginRight="50dp"
        android:onClick="MenuBtn"
        android:src="@drawable/group"
        android:tag="group" />

    <ImageButton
        android:id="@+id/mapmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friendmenu"
        android:layout_centerVertical="true"
        android:onClick="MenuBtn"
        android:src="@drawable/pin"
        android:tag="map" />

    <ImageButton
        android:id="@+id/notificationmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/groupmenu"
        android:layout_alignTop="@+id/mapmenu"
        android:onClick="MenuBtn"
        android:src="@drawable/ic_launcher"
        android:tag="notification" />

    <ImageButton
        android:id="@+id/exitmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapmenu"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:onClick="MenuBtn"
        android:src="@drawable/exit"
        android:tag="exit" />

    <ImageButton
        android:id="@+id/settingsmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groupmenu"
        android:layout_alignTop="@+id/exitmenu"
        android:onClick="MenuBtn"
        android:src="@drawable/settings"
        android:tag="settings" />

    <EditText
        android:id="@+id/err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapmenu"
        android:layout_centerHorizontal="true"
        android:ems="10" />

</RelativeLayout>