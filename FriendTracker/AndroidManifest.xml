<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sv.teamAwesome.friendtracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <!-- App receives GCM messages. -->
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<!-- GCM connects to Google Services. -->
	<uses-permission android:name="android.permission.INTERNET" /> 
	<!-- GCM requires a Google account. -->
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<!-- Keeps the processor from sleeping when a message is received. -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<!--  Allows us to change settings on the Phone. -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
	
    <application        
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        
        <uses-library android:name="com.google.android.maps"/>
        
        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
  			<intent-filter>
    			<action android:name="com.google.android.c2dm.intent.RECEIVE" />
    			<action android:name="com.google.android.c2dm.intent.REGISTRATION" />
    			<category android:name="my_app_package" />
  			</intent-filter>
		</receiver>
        
        <service android:name=".GCMIntentService" />
        
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Register"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.REGISTER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrontPage"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.FRONTPAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Friends" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.FRIENDS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Groups"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.GROUPS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Map"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.MAP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Notifications"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.NOTIFICATIONS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Exit"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.EXIT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Setting"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="sv.teamAwesome.friendtracker.SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
